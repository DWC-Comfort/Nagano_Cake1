<h3>会員情報編集</h3>

<% if @customer.errors.any? %>
  <ul>
    <li><%= @customer.errors.count %>件のエラーが発生しました。</li>
    <li><%= alert %></li>
  </ul>
<% end %>

<%= form_with model:@customer, url: customers_path, local:true do |f| %>

  <div class="field">
    <%= f.label :名前 %>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %>
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email %>
  </div>

  <div class="actions">
    <%= f.submit"編集内容を保存", class: "btn btn-success" %>
    <%= link_to "退会する", customers_confirm_path, class: "btn btn-danger" %>
  </div>

<%end%>