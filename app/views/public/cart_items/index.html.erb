<div class="position-center">
  <h4><span class="page-title">ショッピングカート</span></h4>
</div>
<span class="space"></span>

<!--#もしカートの中身が存在したら-->
<% if @cart_items.present? %>
<div class="position-right">
  <%= link_to "カートを空にする", '/cart_items/', method: :delete, class:"btn btn-danger" %>
</div>

<!-- カート商品の数量編集機能 ここから -->
<table class="table-center">
  <thead>
    <tr>
      <th class="th-color">商品名</th>
      <th class="th-color">単価(税込)</th>
      <th class="th-color">数量</th>
      <th class="th-color">小計</th>
      <th class="th-color"></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td class="column-wide"><%= cart_item.item.name %></td>
        <td class="column-narrow"><%= cart_item.item.add_tax_price.to_s(:delimited, delimiter: ',') %> 円</td>

        <!-- 数量の変更 ここから -->
        <td class="column-narrow">
          <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch, local:true do |f| %>
            <%= f.hidden_field :item_id, value: cart_item.item.id %>
            <%= f.hidden_field :customer_id, value: cart_item.customer.id %>
            <%= f.select :quantity, *[1..10] %>
            <%= f.submit '変更', class:"btn btn-success" %>
          <% end %>
        </td>
        <!-- 数量の変更 ここまで -->

        <td class="column-narrow"><%= cart_item.subtotal %> 円</td>
        <td class="column-narrow"><%= link_to '削除する', cart_item_path(cart_item.id), method: :delete, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<!-- カート商品の数量編集機能 ここまで -->

<div class="position-side">
<%= link_to "買い物を続ける", root_path, class:"btn btn-primary" %>

<!-- カート商品の合計金額表示機能 ここから -->
<table>
  <tr>
    <th class="column-narrow">合計金額</th>
    <!-- 合計金額算出 ここから -->
    <% @cart_items.each do |cart_item| %>
    <% @total_price += cart_item.subtotal %></td>
    <% end %>
    <!-- 合計金額算出 ここまで -->
    <td class="column-narrow"><%= @total_price %> 円</td>
  </tr>
</table>
<!-- カート商品の合計金額表示機能 ここまで -->
</div>

<div class="position-center">
  <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success" %>
</div>
<!--#もしカート内に商品がない場合、商品一覧へ-->
<% else %>
  <div class="position-center">
    カート内に商品がありません<br><br>
    <%= link_to "買い物を続ける", items_path, class:"btn btn-success" %>
  </div>
<% end %>
