<h4><span class="page-title">配送先編集</span></h4>

<table class="table-center table-form">
  <%= form_with model: @receiver, local: true do |f| %>
    <tr>
      <th class="column-wide"><%= f.label :郵便番号（ハイフンなし） %></th>
      <td class="column-very-wide"><%= f.text_field :postal_code %></td>
      <td class="column-wide"></td>
    </tr>
    <tr>
      <th class="column-wide"><%= f.label :住所 %></th>
      <td class="column-very-wide"><%= f.text_field :address, size:40 %></td>
      <td class="column-wide"></td>
    </tr>
    <tr>
      <th class="column-wide"><%= f.label :宛名 %></th>
      <td class="column-very-wide"><%= f.text_field :name %></td>
      <td class="column-wide"><%= f.submit "変更内容を保存", class: "btn btn-success" %></td>
    </tr>
  <% end %>
