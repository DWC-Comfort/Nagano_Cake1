<div class="position-center">
  <h4><span class="page-title">配送先登録/一覧</span></h4>
</div>
<div class="space"></div>

<!-- 配送先登録機能 ここから -->
<%= form_with model: @receiver, local: true do |f| %>
  <table class="table-center table-form">
    <tr>
      <th class="column-wide"><%= f.label :郵便番号（ハイフンなし） %></th>
      <td class="column-very-wide"><%= f.text_field :postal_code, placeholder: "000000" %></td>
      <td class="column-narrow"></td>
    </tr>
    <tr>
      <th class="column-wide"><%= f.label :住所 %></th>
      <td class="column-very-wide"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", size: 40 %></td>
      <td class="column-narrow"></td>
    </tr>
    <tr>
      <th class="column-wide"><%= f.label :宛名 %></th>
      <td class="column-very-wide"><%= f.text_field :name, placeholder: "令和道子" %></td>
      <td class="column-narrow"><%= f.submit "新規登録", class: "btn btn-success" %></td>
    </tr>
  </table>
<% end %>
  <!-- 配送先登録機能 ここまで -->

    <table class="table-center">

      <thead>
        <tr>
          <th class="th-color">郵便番号</th>
          <th class="th-color">住所</th>
          <th class="th-color">宛名</th>
          <th class="th-color"></th>
        </tr>
      </thead>
      <tbody>
      <% @receivers.each do |receiver| %>
        <tr>
          <td class="column-narrow text-center"><%= receiver.postal_code %></td>
          <td class="column-very-wide"><%= receiver.address %></td>
          <td class="column-narrow text-center"><%= receiver.name %></td>
          <td class="column-wide">
            <%= link_to "編集する", edit_receiver_path(receiver), class: "btn btn-success" %>
            <%= link_to "削除する", receiver_path(receiver), method: :delete, data: {confirm: "配送先情報を1件 削除してもよろしいでしょうか。byみっち"}, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= paginate @receivers, theme: 'twitter-bootstrap-4' %>