<div class="container">
  <h4>注文履歴詳細</h4>
  
  　<p>注文情報</p>
    <table class="table table-bordered">
        <tbody>
          <tr>
            <th>注文日</th>
            <th><%= @order.created_at.strftime("%Y/%m/%d") %></th>
          </tr>
          <tr>
            <th>配送先</th>
            <th>
               〒<%= @order.receiver_postal_code %><br>
                <%= @order.receiver_address %><br>
                <%= @order.receiver_name %>
            </th>
          </tr>
          <tr>
            <th>支払方法</th>
            <th><%= @order.payment_method_i18n %></th>
          </tr>
          <tr>
            <th>ステータス</th>
            <th><%= @order.order_status_i18n %></th>
          </tr>
        </tbody>
    </table>
    
    <p>請求情報</p>
    <table class="table table-bordered">
        <tbody>
          <tr>
            <th>商品合計</th>
            <th><%= @order.total_item_price.to_s(:delimited) %></th>
          </tr>
          <tr>
            <th>送料</th>
            <th><%= @order.delivery_fee %></th>
          </tr>
          <tr>
            <th>ご請求金額</th>
            <th><%= (@order.total_item_price + @order.delivery_fee).to_s(:delimited) %></th>
          </tr>
        </tbody>
    </table>
    
    <p>注文内容</p>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_lists.each do |order_list| %>
          <tr>
            <td colspan="2"><%= order_list.item.name %></td>
            <td><%= order_list.item.add_tax_price %></td>
            <td><%= order_list.quantity %></td>
            <td><%= order_list.total_price.to_s(:delimited) %></td>
          </tr>
        <% end %>
      </tbody>
  </table>
</div>