<div class="container">
  
  <p>注文履歴一覧</p>
  
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>注文日</th>
        <th colspan="2">配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td><%= l order.created_at %></td>
        <td colspan="2">
          〒<%= order.receiver_postal_code %><br>
          <%= order.receiver_address %><br>
          <%= order.receiver_name %>
        </td>
        <td></td>
        <td></td>
        <td></td>
        <td><%= link_to "表示する", order_psth(order), class: "btn btn-primary" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  
  
</div>

