<div class="container">
  <h2><b>商品一覧(全<%= @allitems %>件)</b></h2>
  <div class="space"></div>
  <div class="d-flex flex-wrap">
    <% @items.each do |item| %>
      <div class="col-md-3">
        <div>
          <div class="col-xs-3" style="padding-right: 0px; padding-left: 0px;">
            <%= link_to item_path(item) do %>
            <%= attachment_image_tag item, :image, :fill, 210, 210, fallback:"no_image.jpeg", size: "220x220"  %><br>
            <%= item.name %><br>
            ¥<%= item.add_tax_price.to_s(:delimited, delimiter: ',') %>(税込)<br><br><br>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <div class='textcenter' ><%= paginate @items, theme: 'twitter-bootstrap-4' %></div>
  </div>
</div>
