<div class="container">
  <h2>商品一覧(全<%= @items.count %>件)</h2>
  <div class="d-flex flex-wrap">
    <% @items.each do |item| %>
      <div class="col-md-3">
        <div class="card">
          <div class="col-xs-3" style="padding-right: 0px; padding-left: 0px;">
            <%= link_to item_path(item) do %>
            <%= attachment_image_tag item, :image, :fill, 210, 210, fallback:"no_image.jpeg", size: "220x220"  %><br>
            <%= item.name %><br>
            ¥<%= item.add_tax_price.to_s(:delimited, delimiter: ',') %>(税込)
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <%= paginate @items %>
  </div>
</div>