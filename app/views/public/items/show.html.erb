<div class = "container">
  <p><%= flash[:notice]%></p>

  <div class = "row mt-5">
    <div class = "col-md-4">
      <%= attachment_image_tag @item, :image, :fill, 300, 300, fallback:"no_image.jpeg", size: "300x300"  %>
    </div>

    <div class = "col-md-8">
      <h3><%= @item.name %></h3>
      <h4><%= @item.introduction %></h4>
      <h4><%= item.add_tax_price.to_s(:delimited, delimiter: ',') %>円(税込)</h4>
      <% if @item.is_active == true %>
        <%= form_with model: @cart_item, local: true do |f| %>
          <%= f.select :quantity, options_for_select((1..10).to_a), include_blank: "個数選択" %>
          <%= f.submit "カートに入れる", class: 'btn btn-success' %>
        <% end %>
      <% else %>
        <h4>販売停止中</h4>
      <% end%>
    </div>
  </div>
</div>