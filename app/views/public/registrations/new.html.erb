<div class="position-center">
  <h4><span class="page-title">新規会員登録</span></h4>
</div>
<div class="space"></div>

<%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <table class="table-center table-form">
    <tbody>
      <tr>
        <div class="field">
          <th><%= f.label :名前 %></th>
          <th><%= f.label :（姓）%></th>
          <th><%= f.text_field :last_name, autofocus: true, placeholder: "令和" %></th>
          <th><%= f.label :（名） %></th>
          <th><%= f.text_field :first_name, autofocus: true, placeholder: "道子" %></th>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th><%= f.label :フリガナ %></th>
          <th><%= f.label :（セイ） %></th>
          <th><%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ" %></th>
          <th><%= f.label :（メイ） %></th>
          <th><%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ" %></th>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th><%= f.label :メールアドレス %></th>
          <th></th>
          <th><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@examole.com" %></th>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th><%= f.label :郵便番号（ハイフンなし） %></th>
          <th></th>
          <th><%= f.text_field :postal_code, autofocus: true, placeholder: "0000000" %></th>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th><%= f.label :住所 %></th>
          <th></th>
          <th colspan = "3"><%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0",:size =>"50" %></th>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th><%= f.label :電話番号（ハイフンなし） %></th>
          <th></th>
          <th><%= f.text_field :phone_number, autofocus: true, placeholder: "00000000000" %></th>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th> <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %></th>
          <th></th>
          <th><%= f.password_field :password, autocomplete: "new-password" %></th>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th><%= f.label :パスワード（確認用） %></th>
          <th></th>
          <th><%= f.password_field :password_confirmation, autocomplete: "new-password" %></th>
        </div>
      </tr>
      <tr>
        <div class="actions">
          <th></th>
          <th></th>
          <th><%= f.submit "新規登録", class: "btn btn-success btn-block" %></th>
        </div>
      </tr>
    </tbody>
  </table>
<% end %>

<h5><span class="page-sub-title">既に登録済みの方</span></h5>
<div class="position-center">
  <%= render "public/shared/links" %>
</div>