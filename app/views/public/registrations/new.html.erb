<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <p>名前</p>
    <p>(姓)<%= f.text_field :last_name, autofocus: true %></p>
    <p>(名)<%= f.text_field :first_name, autofocus: true %></p>
  </div>

  <div class="field">
    <p>フリガナ</p>
    <p>(セイ)<%= f.text_field :last_name_kana, autofocus: true %></p>
    <p>(メイ)<%= f.text_field :first_name_kana, autofocus: true %></p>
  </div>

  <div class="field">
    <p>メールアドレス</p>
    <p><%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>
  </div>

  <div class="field">
    <p>郵便番号(ハイフンなし)</p>
    <p><%= f.text_field :postal_code, autofocus: true %></p>
  </div>

  <div class="field">
    <p>住所</p>
    <p><%= f.text_field :address, autofocus: true %></p>
  </div>

  <div class="field">
    <p>パスワード<% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </p>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <p>パスワード(確認用)</p>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<%= render "public/shared/links" %>
