<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="back-image">
    <div class="for-footer">
      <header>
          <!--#管理者がログイン状態-->
        <nav class="navbar navbar-expand navbar-dark bg-">
          <a href="/" ><img class="navbar-brand" src="/assets/logo_image.png" alt="logo" /></a>
          <% if admin_signed_in? %>
            <ul class="navbar-nav">
              <li class="navbar-item">
                <%= link_to "商品一覧", admin_items_path, class: "btn btn-warning"%>
              </li>
              <li class="navbar-item">
                <%= link_to "会員一覧", admin_customers_path, class: "btn btn-outline-warning" %>
              </li>
              <li class="navbar-item">
                <%= link_to "注文履歴一覧", admin_orders_path, class: "btn btn-outline-warning" %>
              </li>
              <li class="navbar-item">
                <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-outline-warning" %>
              </li>
              <li class="navbar-item">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-warning" %>
              </li>
            </ul>
            
            <!--顧客のログイン状態-->
          <% elsif customer_signed_in? %>
            <ul class="navbar-nav">
              <li class="navbar-item">
                <%= link_to "マイページ", customers_path, class: "btn btn-outline-warning" %>
              </li>
              <li class="navbar-item">
                <%= link_to "商品一覧", items_path, class: "btn btn-outline-warning" %>
              </li>
              <li class="navbar-item">
                <%= link_to "カート", cart_items_path, class: "btn btn-outline-warning" %>
              </li>
              <li class="navbar-item">
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-outline-warning" %>
              </li>
              <li class="navbar-item">
                ようこそ、<%= current_customer.last_name %>さん！
              </li>
            </ul>
            <p class="flashnotice"><%= notice %></p>
            <p class="alert"><%= alert %></p>
          <% else %>
            <ul class="navbar-nav">
              <li class="navbar-item p-8">
                <%= link_to "About", homes_about_path, class: "btn btn-outline-secondary" %>
              </li>
              <li class="navbar-item px-8">
                <%= link_to "商品一覧", items_path, class: "btn btn-outline-secondary" %>
              </li>
              <li class="navbar-item">
                <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-secondary" %>
              </li>
              <li class="navbar-item">
                <%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-secondary" %>
              </li>
            </ul>
          <% end %>
        </nav>
      </header>

      <main>
        <%= yield %>
      </main>

      <footer>
          <p>© 2021 DMMWEBCAMP TeamComfort</p>
      </footer>
    </div>

  </body>
</html>
