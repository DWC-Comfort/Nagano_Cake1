<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <div class="position-center">
        <h4><span class="page-title">商品編集</span></h4>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto md-5">
      <%= form_with model: ([:admin,@item]), local: true do |f| %>
      <table class=" table-center table-form">
        <tr>
          <div class="form-group">
            <th><%= f.label :商品画像 %></th>
            <th><%= f.attachment_field :image %></th>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :商品名 %></th>
            <th><%= f.text_field :name, placeholder:"商品名", size: 47 %></th>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :商品説明 %></th>
            <th><%= f.text_area :introduction, size: "50×5", placeholder:"ここに説明文を記述します" %></th>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :ジャンル %></th>
            <th><%= f.collection_select :genre_id, Genre.all, :id, :name %></th>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :税抜き価格 %></th>
            <th><%= f.text_field :price, placeholder:"1000", size: 47 %>円</th>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :販売ステータス %></th>
            <th>　<%=f.radio_button :is_active, :true %><span class="text-green"> 販売中</span>　　<%=f.radio_button :is_active, :false %><span class="text-silver"> 販売中止中</span></th>
          </div>
        </tr>
        <tr>
          <div class="form-action">
            <th><%= f.submit "変更を保存", class: "btn btn-success" %></th>
          </div>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
