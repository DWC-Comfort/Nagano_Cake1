<div class = "container">
  <div class = "row mt-5">
    <div class="position-center">
      <h4><span class="page-title">商品詳細</span></h4>
    </div>
  </div>

  <div class = "row mt-5">
    <div class = "col-md-4">
      <%= attachment_image_tag @item, :image, :fill, 300, 300, fallback:"no_image.jpeg", size: "300x300"  %>
    </div>

    <div class = "col-md-8">
      <table class = "table-form">
        <tr>
          <th class="column-narrow">商品名</th>
          <td class="column-very-wide"><%= @item.name %></td>
        </tr>

        <tr>
          <th class="column-narrow">商品説明</th>
          <td class="column-very-wide"><%= @item.introduction %></td>
        </tr>

        <tr>
          <th class="column-narrow">ジャンル</th>
          <td class="column-very-wide"><%= @item.genre.name %></td>
        </tr>

        <tr>
          <th class="column-narrow">
            税込価格</br>(税抜価格)
          </th>
          <td class="column-very-wide">
            <%= @item.add_tax_price.to_s(:delimited, delimiter: ',') %>  円<br>
            (<%= @item.price %>)円
          </td>
        </tr>

        <tr>
          <th class="column-narrow">販売ステータス</th>
          <td class="column-very-wide">
            <% if @item.is_active == false %>
            <span class="text-silver">販売停止中</span>
            <% else %>
            <span class="text-green">販売中</span>
            <% end %>
          </td>
        </tr>
        <tr>
          <th class="column-narrow"></th>
          <td class="column-very-wide"><%= link_to "編集する",edit_admin_item_path(@item.id), class: "btn btn-success" %></td>
        </tr>
      </table>

    </div>
  </div>
</div>
