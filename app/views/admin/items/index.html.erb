<div class = "container o-8column">
  <div class = "row">
    <h2 class = "text-center">商品一覧</h2>
    <div class="ml-auto">
      <%= link_to "新規商品作成", new_admin_item_path %>
    </div>
  </div>

  <div class="container">
    <table class="table">
      <thead class="thead-light">
        <div class ="row justify-content-center">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </div>
      </thead>
      <tbody>
      <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item) %></td>
            <td><%= item.price %>円</td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active == false %>
              <span>販売停止中</span>
              <% else %>
              <span>販売中</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @items %>
  </div>
</div>
