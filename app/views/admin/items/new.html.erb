



<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <div class="position-center">
        <h4><span class="page-title">商品新規登録</span></h4>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto md-5">
      <%= form_with model: ([:admin,@item]), local: true do |f| %>
      <table class=" table-center table-form">
        <tr>
          <div class="form-group">
            <th><%= f.label :商品画像 %></th>
            <td><%= f.attachment_field :image %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :商品名 %></th>
            <td colspan="2"><%= f.text_field :name, placeholder:"商品名", size: 47 %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :商品説明 %></th>
            <td colspan="2"><%= f.text_area :introduction, size: "50×5", placeholder:"ここに説明文を記述します" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :ジャンル %></th>
            <td colspan="2"><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :税抜き価格 %></th>
            <td colspan="2"><%= f.text_field :price, placeholder:"1000", size: 47 %>円</td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :販売ステータス %></th>
            <td>　<%=f.radio_button :is_active, :true, checked: true %> 販売中　　<%=f.radio_button :is_active, :false %> 販売停止中</td>
          </div>
        </tr>
        <tr>

          <div class="form-action ">
            <th></th>
            <td><%= f.submit "新規登録", class: "btn btn-success" %></th>
          </div>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
