<div class="position-center">
  <h4><span class="page-title">ジャンル一覧・追加</span></h4>
</div>
<span class="space"></span>

<!-- ジャンル新規登録機能ここから -->
<div class="position-center">
　<%= form_with model: ([:admin, @genre]), local: true do |f| %>
　　<%= f.label :ジャンル名 %>
　　<%= f.text_field :name, autofocus: true, placeholder: "ジャンル名" %>
　　<%= f.submit "新規登録", class:"btn btn-success"  %>
　<% end %>
</div>
<!-- ジャンル新規登録機能ここまで -->

<!-- ジャンル一覧表示ここから -->
　<table class="table-center">
　　<thead>
　　　<tr>
　　　　<th class="th-color">ジャンル</th>
　　　　<th class="th-color"></th>
　　　</tr>
　　</thead>
　　<tbody>
　　　<% @genres.each do |genre| %>
　　　　<tr>
　　　　　<td class="column-wide"><%= genre.name %></td>
　　　　　<td class="column-narrow"><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success"  %></td>
　　　　</tr>
　　　<% end %>
　　</tbody>
　</table>
<!-- ジャンル一覧表示ここまで -->