<h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>

<%= form_with model:@customer, url: admin_customer_path, local:true do |f| %>

  <div class="field">
    <%= f.label :"会員ID" %>
    <%= f.label :"#{@customer.id}" %>
  </div>

  <div class="field">
    <%= f.label :"氏名" %>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :"フリガナ" %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号" %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :"住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :"電話番号" %>
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :"会員ステータス" %>
    <!--is_deletedをfalseに変更するボタン-->
    <%= f.radio_button :is_deleted, :false %>
    <%= f.label :is_deleted, "有効" %>
    <!--is_deletedをtrueに変更するボタン-->
    <%= f.radio_button :is_deleted, :true %>
    <%= f.label :is_deleted, "退会" %>
  </div>

  <div class="actions">
    <%= f.submit"変更を保存" %>
  </div>

<%end%>