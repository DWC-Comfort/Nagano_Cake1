<div class="position-center">
  <h4><span class="page-title"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</span></h4>
</div>
<span class="space"></span>

<table class='table-center table-form'>
  <tbody>
    <tr>
      <th>会員ID</th>
      <td class="column-very-wide"><%= @customer.id %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td class="column-very-wide"><%= @customer.last_name %><%""%><%= @customer.first_name %></td>
    </tr>
    <tr>
       <th>フリガナ</th>
       <td class="column-very-wide"><%= @customer.last_name_kana %><%""%><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td class="column-very-wide"><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td class="column-very-wide"><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td class="column-very-wide"><%= @customer.phone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td class="column-very-wide"><%= @customer.email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <!--is_deletedがtrueの場合は「退会」そうでなければ「有効」を表示する。-->
      <% if @customer.is_deleted == true %>
        <td class="column-very-wide">退会</td>
      <%else%>
        <td class="column-very-wide text-green">有効</td>
      <%end%>
    </tr>
  </tbody>
</table>

<div class="position-center">
<%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %>　　　<%= link_to "注文履歴一覧を見る", admin_orders_path, class: "btn btn-primary" %>
</div>