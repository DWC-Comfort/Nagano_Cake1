<h3>会員一覧</h3>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |c| %>
      <tr>
        <td><%= c.id %></td>
        <td><%= link_to admin_customer_path(c.id) do %>
              <%= c.last_name + c.first_name %>
            <%end%>
        </td>
        <td><%= c.email %></td>
        <% if c.is_deleted == true %>
          <td>退会</td>
        <%else%>
          <td>有効</td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @customers %>