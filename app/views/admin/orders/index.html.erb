<div class="container">
  <h4>注文履歴一覧</h4>

  <table class="table">
    <thead>
      <tr bgcolor="#C0C0C0">
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
　　　　<!--日付と時間を表記-->
        <td><%= link_to admin_order_path(order) do %>
              <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S')  %>
            <% end %>
        </td>
        <td><%= order.customer.last_name + order.customer.first_name %></td>
        <td>
          <% @order_list.each do |order_list| %>
          <%= order_list.quantity %>
          <% end %>
        </td>
        <td><%= order.order_status_i18n %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @orders %>
</div>