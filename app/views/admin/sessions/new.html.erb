<h2>Log in</h2>
<div class="container">
  <div class="row">
    <div class="col-5 mx-auto">
      
      <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "sample@example.com" %>
        </div>
      
        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, class: "form-control" %>
        </div>
      
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>
      
      <%= render "admin/shared/links" %>
        
    </div>
  </div>
</div>
